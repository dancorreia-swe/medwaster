# AI Configuration
# Provider: openai (default), ollama (self-hosted), or localai (self-hosted)
AI_PROVIDER=openai
# Model names WITHOUT provider prefix (e.g., "gpt-4o", "qwen3", NOT "ollama:qwen3")
AI_CHAT_MODEL=gpt-4o
AI_EMBEDDING_MODEL=text-embedding-3-small
AI_TRANSCRIPTION_MODEL=whisper-1
OPENAI_API_KEY=
OPENAI_BASE_URL=https://api.openai.com/v1

# Ollama (lightweight self-hosted, set AI_PROVIDER=ollama)
# For tool calling/RAG, use qwen3 or llama3.3. llama3.1 has limited tool support.
# Example: AI_CHAT_MODEL=qwen3, AI_EMBEDDING_MODEL=nomic-embed-text
OLLAMA_BASE_URL=http://localhost:11434/v1
OLLAMA_API_KEY=

# LocalAI (heavy self-hosted, set AI_PROVIDER=localai)
# Example: AI_CHAT_MODEL=mistral-7b-instruct-v0.2.Q4_K_M
LOCALAI_BASE_URL=http://localhost:8080/v1
LOCALAI_API_KEY=

# Whisper (transcription)
# Example: AI_TRANSCRIPTION_MODEL=whisper-1
WHISPER_BASE_URL=http://localhost:8081/v1
WHISPER_API_KEY=
